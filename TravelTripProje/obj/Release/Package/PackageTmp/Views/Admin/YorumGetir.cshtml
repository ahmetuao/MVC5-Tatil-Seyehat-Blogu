@model TravelTripProje.Models.Siniflar.Yorumlar
@{
    ViewBag.Title = "YorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="my-3">Yorum Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("YorumGuncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID, new { @class = "fs-5" })
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.KullaniciAdi, new { @class = "fs-5" })
    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Mail, new { @class = "fs-5" })
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @placeholder = "gg.aa.yyyy" })
    <br />
    @Html.LabelFor(x => x.Yorum, new { @class = "fs-5" })
    @Html.TextAreaFor(x => x.Yorum,15,1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Yorum Güncelle</button>
}

