@model TravelTripProje.Models.Siniflar.Admin
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>Kayıt Ol</title>
</head>
<body>
    <div class="container" style="margin: 6rem auto 24rem auto; width:50%;">
        <form class="form-group m-5" method="post">
            <div class="card" style="background-image: url('../../webloginTema/images/head_bg.jpg');">
                <div class="card-header text-center fs-1 text-white m-1" style="background-image: url('../../webloginTema/images/head_bg.jpg');border-bottom:1px solid white;">
                    KAYIT FORMU
                </div>
                <div class="card-body m-1 p-5" style="background-image: url('../../webloginTema/images/head_bot.gif');border: 1px solid white; border-radius:5px;">
                    @Html.LabelFor(x => x.Kullanici, new { @class = "fs-5", @style = "color: white" })
                    @Html.TextBoxFor(x => x.Kullanici, new { @class = "form-control", @style = "color:#9e3256;border: 3px solid #9e3256", @required = "required", @placeholder = "Kullanıcı Adı Belirleyiniz..." })
                    <br />
                    @Html.LabelFor(x => x.Mail, new { @class = "fs-5", @style = "color: white" })
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", @style = "color:#9e3256;border: 3px solid #9e3256", @type = "email", @required = "required", @placeholder = "Mailinizi Giriniz..." })
                    <br />
                    @Html.LabelFor(x => x.Sifre, new { @class = "fs-5", @style = "color: white" })
                    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", @style = "color:#9e3256;border: 3px solid #9e3256", @type = "password", @required = "required", @placeholder = "Şifre Belirleyiniz..." })
                    <br />
                    <input type="hidden" value="1" name="role" />
                    <div class="text-center text-white">Hesabınız Var mı ? | <a style="text-decoration:none;color:#9e3256;font-weight:bold" href="/GirisYap/Login/">Giriş Yap</a></div>
                    <div class="text-center mt-3">
                        <button class="btn btn-default px-5 py-2" style="background-color: #9e3256;color:white;">Kayıt Ol</button>
                    </div>
                    <div style="color: #992d51;" class="fs-5 mt-3 text-center">
                        @ViewBag.RegisterError
                    </div>
                    <div style="color: #992d51;" class="fs-5 mt-3 text-center">
                        @ViewBag.RegisterError2
                    </div>
                    <div style="color: #992d51;" class="fs-5 mt-3 text-center">
                        @ViewBag.RegisterError3
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>



