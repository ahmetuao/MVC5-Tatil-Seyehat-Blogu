@using TravelTripProje.Models.Siniflar
@model List<iletisim>
@{
    ViewBag.Title = "IletisimListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="my-3">İletişim Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad Soyad</th>
        <th>Mail</th>
        <th>Konu</th>
        <th>Mesaj</th>
        <th>Sil</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.ID</td>
    <td>@x.AdSoyad</td>
    <td>@x.Mail</td>
    <td>@x.Konu</td>
    <td>@x.Mesaj</td>
    <td><a href="/Admin/IletisimSil/@x.ID" class="btn btn-danger">Sil</a></td>
</tr>
    }
</table>


