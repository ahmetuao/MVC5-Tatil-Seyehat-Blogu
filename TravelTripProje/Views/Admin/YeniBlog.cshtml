@model TravelTripProje.Models.Siniflar.Blog
@{
    ViewBag.Title = "YeniBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="my-3">YeniBlog Ekleme</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Baslik, new { @class = "fs-5" })
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih, new { @class = "fs-5" })
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", @placeholder="gg.aa.yyyy" })
    <br />
    @Html.LabelFor(x => x.BlogImage, new { @class = "fs-5" })
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Aciklama, new { @class = "fs-5" })
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control", @style="height:200px;" })
    <br />
    <button class="btn btn-primary">Blog Ekle</button>
</form>

